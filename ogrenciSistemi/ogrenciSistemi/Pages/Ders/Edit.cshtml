@page
@model ogrenciSistemi.Pages.Ders.EditModel
@{
}

<br>
<h2>Ders Düzenleme</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.errorMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}

<form method="POST">
    <input type="hidden" name="id" value="@Model.dersInfo.id" />
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">DersKodu</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="derskodu" value="@Model.dersInfo.DersKodu" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">DersAdı</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="dersadı" value="@Model.dersInfo.DersAdı" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">AKTS</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="akts" value="@Model.dersInfo.AKTS" />
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class='alert alert-success alert-dismissible fade show' role='alert'>
                    <strong>@Model.successMessage</strong>
                    <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Onayla</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">İptal</a>
        </div>
    </div>
</form>