@page
@model ogrenciSistemi.Pages.Öğrenci.CreateOgrenciModel
@{
}

<br>
<h2>Yeni Öğrenci</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.errorMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}

<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">ÖğrenciNo</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="ÖğrenciNo" value="@Model.ogrenciInfo.ÖğrenciNo" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">İsim</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="isim" value="@Model.ogrenciInfo.İsim" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Cinsiyet</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="cinsiyet" value="@Model.ogrenciInfo.Cinsiyet" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Bölüm</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="bölüm" value="@Model.ogrenciInfo.Bölüm" />
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class='alert alert-success alert-dismissible fade show' role='alert'>
                    <strong>@Model.successMessage</strong>
                    <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Onayla</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">İptal</a>
        </div>
    </div>
</form>